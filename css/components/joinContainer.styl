
.joinContainer
    display grid
    width 100%
    grid-template-columns repeat(12, 1fr)
    padding-top pxToRem(144)
    gradient(#d7ebf5, #fff)

    &__footer
        margin-top pxToRem(50)
        grid-column-start 6 
        grid-column-end 8
        text-align: center
   


    &__footer p 
        font-size pxToRem(12)
        color $dsy-secondary_text-lg
        font-weight $dsy-weight-small 
        margin-top pxToRem(6)
        
