.card 
    font-family $dsy-family
    margin-bottom 50px
    border-radius 12px
    padding 36px
    box-shadow 0px 2px 15px 0px rgb(228, 228, 228)
    background-color $dsy-primary_text


    &__title 
        margin calc($dsy-size + 0.5rem)
        font-size calc($dsy-size + 0.5rem)
        font-weight 600



    &__paragraph 
        margin calc($dsy-size + 0.5rem)
        font-size calc($dsy-size + 0.4rem)
        font-weight 400


    &--up 
        grid-column-start 2
        grid-column-end 7
   

    &--down 
        grid-column-start 6
        grid-column-end 11
    
   



