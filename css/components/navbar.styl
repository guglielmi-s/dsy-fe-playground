.navbar 
    bg-color($dsy-bg-navbar)
    height pxToRem(60)
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    padding 0 pxToRem(4)
    position sticky
    top 0
    z-index 5

    &__menuBox
        display flex
        flex-direction row
        align-items center

    &__list 
        display flex
        flex-direction row
        align-items flex-start


    &__list a 
        font-family $dsy-family
        font-size pxToRem(14)
        color $dsy-primary_text
        text-decoration none
        
        

    &__btnBox 
        display flex
        flex-direction row
        align-items center
        justify-content flex-end
    
