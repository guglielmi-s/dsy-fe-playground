.navbar 
    background-color $dsy-bg-navbar
    height $dsy-size + 4rem
    display flex
    flex-direction row
    justify-content space-evenly
    align-items center

    &__list 
        display flex
        flex-direction row
        justify-content flex-start


    &__list a 
        font-family $dsy-family
        font-size $dsy-size - 0.2rem
        color $dsy-primary_text
        text-decoration none
        margin-right $dsy-size + 2rem

    &__btnBox 
        display flex
        flex-direction row
        align-items center
        justify-content center
    
