.cardEvents{
    background-color: var(--primary_text);
    border-radius: 4px;
    padding: 10px;
    margin: 0px 20px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.cardEvents__calendar{
    border: 1px solid #9497A3;
    border-radius: 4px;
    padding: 8px 10px;
    text-align: center;
    margin: 0px 5px;
    text-transform: uppercase;
    font-size: calc(var(--size) - 0.2rem);
}

.cardEvents__calendar :nth-child(2){
    font-size: calc(var(--size) + 1rem);
}

.cardEvents__details{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: flex-start;
}

.cardEvents__details p {
    margin-bottom: 8px;
}

.cardEvents__details :nth-child(1){
    font-weight: 600;
    font-size: calc(var(--size) + 0.1rem);
}