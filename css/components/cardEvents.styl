
.cardEvents 
    bg-color($dsy-primary_text)
    border-radius pxToRem(4)
    padding pxToRem(10)
    margin 0 pxToRem(20)
    display flex
    flex-direction row
    justify-content space-around
    align-items center
    position relative

    &__calendar
        border 1px solid hsl(230, 8%, 85%)
        border-radius pxToRem(4)
        padding pxToRem(10) pxToRem(12)
        text-align center
        margin  pxToRem(5)
        text-transform uppercase
        font-size pxToRem(12)
        position relative
        display flex 
        flex-direction column 
        align-items center 
        justify-content flex-end

    &__calendar :nth-child(1)
        
        padding-top pxToRem(5)

    
    &__calendar :nth-child(2)
        font-size pxToRem(34)
        font-weight $dsy-weight-bold

    &__details
        display flex
        flex-direction column
        justify-content space-evenly
        align-items flex-start 

    &__details p 
        font-size pxToRem(12)
        margin-bottom pxToRem(12)
    
    &__details :nth-child(1)
        font-weight $dsy-weight-bold
        font-size pxToRem(18)

    &__bordino 
        bg-color(#FDECF080)
        position absolute 
        z-index  4
        top 0
        left 0
        margin-bottom 5px
        border-radius 4px 4px 0px 0px
        border-bottom 1px solid rgba(242, 120, 149, 0.3) 
        width 100%
        height 14px