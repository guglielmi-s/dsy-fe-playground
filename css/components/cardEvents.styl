@require "./tools/function/pxToRem"
.cardEvents 
    background-color $dsy-primary_text
    border-radius pxToRem(4)
    padding pxToRem(10)
    margin 0 pxToRem(20)
    display flex
    flex-direction row
    justify-content space-around
    align-items center


    &__calendar
        border 1px solid hsl(228, 8%, 61%)
        border-radius pxToRem(4)
        padding pxToRem(10) pxToRem(10)
        text-align center
        margin 0 pxToRem(5)
        text-transform uppercase
        font-size pxToRem(12)


    &__calendar :nth-child(2)
        font-size pxToRem(34)
        font-weight $dsy-weight-bold


    &__details
        display flex
        flex-direction column
        justify-content space-around
        align-items flex-start


    &__details p 
        margin-bottom pxToRem(8)
    
    &__details :nth-child(1)
        font-weight $dsy-weight-bold
        font-size pxToRem(18)

