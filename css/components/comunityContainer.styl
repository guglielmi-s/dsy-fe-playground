.comunityContainer

    display flex
    flex-direction column
    align-items center


    &__illustration
        text-align center
        position relative

        img:first-child
            width 70%
            margin pxToRem(48)


    &__footer
        display flex
        flex-direction column
        align-items center
        justify-content center
        margin pxToRem(48)

        > p
            font-size pxToRem(14)
            color $dsy-secondary_text-lg
            font-weight $dsy-weight-small 
            margin-top pxToRem(6)
            
            @media (max-width: $dsy-screen-tablet)
                font-size pxToRem(10)
