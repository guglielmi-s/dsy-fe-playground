.headerContainer {
    font-family: var(--family);
    height: calc(var(--size) + 35rem);
    background-image: radial-gradient(var(--primary) 9%, var(--bg-navbar) 100%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: var(--primary_text)
}

.headerContainer p {
    font-size: calc(var(--size) - 0.4rem);
    margin-top: calc(var(--size) + 2rem)
}

.headerContainer__list {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin: calc(var(--size) - 0.6rem);
}

.headerContainer__list a {
    color: var(--primary_text);
    background-color: var(--bg-navbar);
    padding: calc(var(--size) - 0.7rem) calc(var(--size) - 0.1rem) ;
    margin: calc(var(--size) - 0.4rem);
    border-radius: calc(var(--size) + 0.3rem);
    text-decoration: none;
    font-size: calc(var(--size) - 0.4rem);
}