@require "./tools/function/pxToRem"

.headerContainer 
    font-family $dsy-family
    line-height pxToRem(42)
    height pxToRem(720)
    background-image radial-gradient($dsy-primary 9%, $dsy-bg-navbar 100%)
    display flex
    flex-direction column
    justify-content center
    align-items center
    color $dsy-primary_text

    &__list 
        display flex
        flex-direction row
        justify-content space-between
        align-items center
        margin pxToRem(24)


    &__list a 
        color $dsy-primary_text
        background-color $dsy-bg-navbar
        padding pxToRem(6) pxToRem(12) 
        margin pxToRem(12)
        border-radius pxToRem(17)
        text-decoration none
        font-size pxToRem(12)
        font-weight $dsy-weight-small

.headerContainer h1 
        font-size pxToRem(34)
        font-weight $dsy-weight-bold    

.headerContainer  h2
        font-size pxToRem(34)
        font-weight $dsy-weight-small   

.headerContainer p
        font-size $dsy-size - 0.4rem
        margin $dsy-size + 1rem


