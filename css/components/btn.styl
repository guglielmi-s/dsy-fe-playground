.btn
	cursor pointer
	text-transform uppercase
	font-size calc(var(--size) - 0.4rem)
	line-height calc(var(--size) + 0.4rem)
	background-color inherit
	border none
	border-radius calc(var(--size) - 0.7rem)
	padding calc(var(--size) - 0.5rem ) calc(var(--size) - 0.2rem)
	font-weight var(--bold)

	&--noBorder
		color var(--primary_text)
		font-weight var(--small)

	&--primary
		width 100%
		background-color var(--primary)
		color var(--primary_text)

	&--event
		border 1px solid #9497a3
		font-size calc(var(--size) - 0.2rem)
		color var(--primary)
		padding calc(var(--size) - 0.7rem)
