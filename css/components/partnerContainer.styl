  
.partnerContainer 
      margin pxToRem(60) 0
      @media (max-width: $dsy-screen-tablet)
          margin pxToRem(20) 0

      p 
          text-align center
          font-weight $dsy-weight-bold 
          font-size pxToRem(26)
          margin-bottom pxToRem(48)

          @media (max-width: $dsy-screen-tablet)
              font-size pxToRem(13) 
              padding pxToRem(13) pxToRem(6)
              margin-bottom pxToRem(24)



      &__logoBox     
            width 100%
            display flex 
            flex-direction row
            justify-content space-evenly
            align-items: center
            overflow auto
            white-space nowrap 
            
            @media (max-width: $dsy-screen-tablet)
                width 100%
                justify-content space-between
          
          
            img          
                width 100%
                display inline-block
                padding 0 pxToRem(4)

           
              
             

  



